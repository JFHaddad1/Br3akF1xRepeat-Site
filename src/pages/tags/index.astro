---
import { getCollection } from "astro:content";
import BaseLayout from '../../layouts/BaseLayout.astro';
const allPosts = await getCollection("blog");
const tags = [...new Set(allPosts.map((post: any) => post.data.tags).flat())];
const siteTitle = "// Br3akF1xRepeat";
const pageTitle = "// Tags";
---
<BaseLayout siteTitle ={siteTitle} pageTitle={pageTitle}>
	<h1>Portfolio: Joseph Haddad</h1>
	<h2>This is my new Tags page</h2>
	<p>I am working through Astro's introductory tutorial. This page displays the Tags from my blog on my page.</p>
    <div class="tags">
        {tags.map((tag) => (
            <p class="tags"><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}
    </div>
</BaseLayout>
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: block;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>